{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@openzeppelin": ["node_modules/@openzeppelin"] // This mapping is relative to "baseUrl"
    }
  }
}
